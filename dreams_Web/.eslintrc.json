{
    "env": {
        "node": true,
        "browser": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/warning",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react",
        "import"
    ],
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "react/prop-types": "off",
        "react/react-in-jsx-scope": "off",
        "indent": [
            2,
            4,
            {
                "ImportDeclaration": "first",
                "ObjectExpression": "first",
                "VariableDeclarator": {
                    "let": 2,
                    "const": 3
                },
                "SwitchCase": 1
            }
        ],
        "semi": [
            "warning",
            "never"
        ],
        "quotes": [
            "warning",
            "double"
        ],
        "allowTemplateLiterals": 0,
        "no-unused-vars": [
            1,
            {
                "vars": "all",
                "args": "all",
                "argsIgnorePattern": "^_"
            }
        ]
    }
}